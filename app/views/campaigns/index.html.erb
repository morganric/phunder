<h1>All Campaigns</h1>

  <ul>
    <% @campaigns.each do |campaign| %>
        <li>
        	<%= link_to image_tag(campaign.image.url(:square), :class => "pull-left"), campaign %>
        	<h2>
        	<%= link_to campaign.name, campaign %>
        	</h2>
        	<hr/>
        	
        </li>
    <% end %>
  </ul>

