
<div class="clearfix col-md-12">
	<h1>
		<%= @photo.title %>
		<small>
			<% if @photo.user != nil %>by <%= @photo.user.name %><% end %>
			<span class="pull-right label label-success">
				<strong>Donated</strong>
				$ <%= @photo.paid %>
			</span>
		</small>
	</h1>
	<h2>
	<small>
	Campaign: <%= link_to @photo.campaign.name, @photo.campaign  %>
	</small>
	</h2>
	<hr/>
	<div class="col-md-3">
		<div class="panel panel-default">
	    <div class="panel-heading">
	           <h3>
	              Share
	            </h3>
	        </div>
	        <div class="panel-body">
			<%= render_shareable :turbolinks => true, :buttons => ['twitter', 'facebook', 'tumblr'], :facebook=> {:send=> 'true', :url=> '#{photo_url(@photo)}'}, :twitter => {:via => 'phunderapp', :text  => 'New Photo: #{@photo.title} for campaign - ', :hashtags => @photo.campaign.hashtag }  %>
			</div>
		</div>
		<% if current_user && current_user.admin? %>
		<div class="" >
			<%= link_to "Edit", edit_photo_path(@photo) %>
		</div>
		<% end %>
	</div>
	<div class="col-md-9">
		<%#= image_tag(@photo.image.url(), :class => "pull-left") %>

		<%= cl_image_tag(@photo.image.url().split("/").last,  :transformation=>[
        {:width=>400, :crop=>:scale},
        {:opacity=>60, :overlay=>"lightning-logo_black", :crop=>:scale, :gravity=>:north_west, :flags=>:relative, :x=>5, :y=>5},
        {:color=>"#303030", :overlay=>"text:Helvetica_20_bold:@phunderapp", :x=>10, :y=>5, :gravity=>:south_west},
        # {:opacity=>60, :overlay=>"lightning-logo_black", :crop=>:scale, :gravity=>:south_east, :flags=>:relative, :x=>5, :y=>30,},
        {:color=>"#303030", :overlay=>"text:Helvetica_20_bold:%23#{@photo.campaign.hashtag}", :x=>10, :y=>5, :gravity=>:south_east}
        ], :class=>"pull-left") %>

        <br/>
		<div class="pull-left">
			<h3>Comments<h3/>
			<hr/>
			<div class="fb-comments" data-href="<%= photo_url(@photo)%>" data-numposts="5" data-colorscheme="light"></div>
		</h3>
	</div>
	</div>

</div>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&appId=615925001838726&version=v2.0";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<style type="text/css">
  body {
    background-image: url(<%= @photo.campaign.banner.url %>);
    background-size: cover;
  }

</style>